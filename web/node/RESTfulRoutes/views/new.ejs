<% include ./partials/header %>
<div class="ui main text container segment" id="hello">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div>
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image">
        </div>
        <div>
            <label>Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" required></textarea>
        </div>
        
        <input class="ui violet basic button" id="btn" type="submit">
    </form>
</div>

<% include ./partials/footer %>